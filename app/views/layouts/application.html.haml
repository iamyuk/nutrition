!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Nutrition
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      .global-nav
        .global-nav__list
          .global-nav__list__item
            - if user_signed_in?
              = link_to "new records", new_record_path
              = link_to "logout", destroy_user_session_path, method: :delete
            - else
              .global-nav__item__sign_up
                = link_to "sign up", new_user_registration_path
              .global-nav__item__sign_in
              
                = link_to "sign in", new_user_session_path
      #js-hamburger.hamburger
        %span.hamburger__line.hamburger__line--1
        %span.hamburger__line.hamburger__line--2
        %span.hamburger__line.hamburger__line--3
      #js-black-bg.black-bg
    = yield
