.record-form
= form_for @record do |f|
  - if @record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @record.errors.full_messages.each do |message|
          %li= message

  .record-form__field
    .record-form__field__date
      %h1 Date
      = f.date_select :date, {with_css_classes: true}
    .record-form__field__food
      %h1 food
      = f.text_field :food_id, class: "records_foods"

  .record-form__actions
    = f.submit 'Save', class: "records_save"
