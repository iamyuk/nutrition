.devise-registration
  .devise-registration__header
    %h2 Sign up
  .devise-registration__body
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      %label.label email
      %br
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "full-field", placeholder: "PC・携帯どちらでも可"
      %br
      %br
      %label.label password
      -# - if @minimum_password_length
      -#   %em
      -#     (#{@minimum_password_length} characters minimum)
      %br
      = f.password_field :password, autocomplete: "new-password", class: "full-field", placeholder: "6文字以上"
      %br
      %br
      %label.label password*
      %br
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "full-field", placeholder: "6文字以上"
      %br
      %br
      %label.label name
      %br
      = f.text_field :last_name, class: "half-field", placeholder: "例）山田"
      = f.text_field :first_name, class: "half-field", placeholder: "例）太郎"
      %br
      %br
      %label.label name kana
      %br
      = f.text_field :last_name_kana, class: "half-field", placeholder: "例）ヤマダ"
      = f.text_field :first_name_kana, class: "half-field", placeholder: "例）タロウ"
      %br
      %br
      %label.label phone number
      %br
      = f.text_field :phone_number, class: "full-field", placeholder: "ハイフンなし"
      %br
      %br
      %label.label birthday
      %br
      = f.date_select :birthday, {start_year: 1950, end_year: (Time.now.year), with_css_classes: true, prompt: "--"}
      %br
      %br
      %label.label sex
      %br
      = f.select :sex, [["男性", "male"], ["女性", "female"]], {prompt: "--", with_css_classes: true}, class: "full-field"
      %br
      %br
      %label.label height, weight
      %br
      = f.text_field :height, class: "half-field", placeholder: "身長 cm"
      = f.text_field :weight, class: "half-field", placeholder: "体重 kg"
      .devise-registration__body__submit
        = f.submit "Sign up"
  .devise-registration__footer
    -# = render "devise/shared/links"
